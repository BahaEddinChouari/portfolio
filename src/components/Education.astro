---
import Section from "./Section.astro";
import type { EducationProps } from "@types";

interface Props {
  education: EducationProps[];
  title?: string;
}

const { education, title } = Astro.props as Props;
---

<Section text={title ?? "Education"} href="education">
  <div class="relative mx-auto max-w-4xl">
    <div class="absolute left-5 top-0 h-full w-px bg-gradient-to-b from-primary/30 via-neutral/30 to-transparent sm:left-6"></div>
    <ul class="space-y-8">
      {education.map((ed) => (
        <li class="relative pl-12 sm:pl-14">
          <span class="absolute left-3 top-2 h-4 w-4 -translate-x-1/2 rounded-full border border-primary/60 bg-[#0b0f14] shadow-[0_0_20px_rgba(87,85,255,0.35)] sm:left-4"></span>
          <div class="rounded-2xl border border-neutral/20 bg-gradient-to-br from-[#0b0f14] to-[#0f141b] p-5 transition-shadow hover:shadow-[0_6px_40px_rgba(87,85,255,0.15)]">
            <div class="flex flex-wrap items-center justify-between gap-3">
              <h3 class="font-serif text-xl font-semibold text-primary sm:text-2xl">{ed.school}</h3>
              <span class="rounded-md border border-neutral/30 px-2.5 py-1 text-xs text-neutral">{ed.startDate} — {ed.endDate}</span>
            </div>
            <p class="mt-2 text-sm text-neutral sm:text-base">{ed.degree}{ed.location ? ` — ${ed.location}` : ''}</p>
          </div>
        </li>
      ))}
    </ul>
  </div>
</Section>


